<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Internet Provider</display-name>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!--============================================================
	i18n support
    =============================================================-->
    <!-- this way we set the resource bundle name -->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>resources</param-value>
    </context-param>

    <!-- this way we set the default locale (optional) -->
    <!-- the (preferable) browser's locale will be used if we don't set the default locale -->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
        <param-value>ru</param-value>
    </context-param>

    <!-- supported locales -->
    <context-param>
        <param-name>locales</param-name>
        <param-value>ru en</param-value>
    </context-param>

    <!--============================================================
        Controller
    =============================================================-->
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.epam.serdyukov.ispmanager.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <!--============================================================
	Encoding support filter
    =============================================================-->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.epam.serdyukov.ispmanager.controller.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <!--============================================================
	Security filter.
	1) admin: admin commands
	2) client: client commands
	3) commons: commands for all roles
	4) out-of-control: commands without access control
	Delimiter - space/tab
    =========================================================-->
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.epam.serdyukov.ispmanager.controller.filter.SecurityFilter</filter-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>main registration edit_client profile add_tariff edit_tariff remove_tariff</param-value>
        </init-param>
        <init-param>
            <param-name>client</param-name>
            <param-value>account personal_data</param-value>
        </init-param>
        <init-param>
            <param-name>common</param-name>
            <param-value>pdf_builder logout redirect no_command</param-value>
        </init-param>
        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>login i18n</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <!--============================================================
	Context listener
    =============================================================-->
    <listener>
        <listener-class>com.epam.serdyukov.ispmanager.controller.listener.ContextListener</listener-class>
    </listener>

    <!--============================================================
        Error page
    =============================================================-->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>
</web-app>